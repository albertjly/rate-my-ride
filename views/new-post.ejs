<%- include ('partials/html-head'); -%>
  <%- include ('partials/header-nav.ejs'); -%>

    <section class="container">
      <form action="/post">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Image Url:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="url" name="car-image">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Make:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="" name="car-make">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Model:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="" name="car-model">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Year:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="" name="car-year">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Color:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="" name="car-color">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Car Description:</label>
          <div class="form col-sm-10">
            <textarea name="car-description" class="form-control" rows="5"
              placeholder="Please describe your car!"></textarea>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Submit Your Precious</button>
          </div>
        </div>
      </form>
    </section>

    <%- include ('partials/footer.ejs'); -%>