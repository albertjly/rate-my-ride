<%- include ('partials/html-head'); -%>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Rate My Ride</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/new-post">Post</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log out</a>
            </li>
          </ul>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-light" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>
  </header>

  <section class="container" id="car-post">
    <form action="/post">
      <h2 class="text-center mb-3">Post your Car</h2>
      <div class="row car-detail">
        <div class="col-4 car-detail-left">
          <div class="form-group row justify-content-between">
            <label class="col-sm-4 col-form-label">Make:</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" placeholder="" name="car-make">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-4 col-form-label">Model:</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" placeholder="" name="car-model">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-4 col-form-label">Year:</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" placeholder="" name="car-year">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-4 col-form-label">Color:</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" placeholder="" name="car-color">
            </div>
          </div>
        </div>
        <div class="col-8 car-detail-right">
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Description:</label>
            <div class="form col-sm-9">
              <textarea name="car-description" class="form-control" placeholder="Please describe your car!"></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="car-post-bottom row">
        <div class="col-9 form-group row">
          <label class="col-sm-2 col-form-label">Image Url:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="url" name="car-image">
          </div>
        </div>
        <div class="col-3 form-group">
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn">Submit Your Precious</button>
          </div>
        </div>
      </div>

    </form>
  </section>
  <%- include ('partials/footer.ejs'); -%>