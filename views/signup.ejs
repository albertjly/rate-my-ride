<%- include ('partials/html-head'); -%>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Rate My Ride</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/new-post">Post</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log out</a>
            </li>
          </ul>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-light" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>
  </header>

  <section class="account">
    <div class="container">
      <div class="signup row justify-content-between">
        <div class="signup_img col-lg-8 d-none d-md-none d-lg-block">
          <img src="./images/Fiat-Coupe-2022.jpg" alt="">
        </div>
        <div class="signup-form col-lg-4">
          <form method="post">
            <h2 class="text-center">Sign up</h2>
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="floatingUsername" placeholder="username">
              <label for="floatingUsername">Username</label>
            </div>
            <div class="form-floating mb-3">
              <input type="email" class="form-control" id="floatingEmail" placeholder="name@example.com">
              <label for="floatingEmail">Email address</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
              <label for="floatingPassword">Password</label>
            </div>
            <div class="d-flex justify-content-between align-items-start">
              <div class="login-panel">
                <label class="">
                  <input type="checkbox">
                  Remember me
                </label>
              </div>
              <div class="form-group">
                <button type="submit" class="">Sign up</button>
              </div>
            </div>
          </form>
          <p class="text-center"><a href="/login">Switch to login</a></p>
        </div>
      </div>
    </div>
  </section>

  <%- include ('partials/footer.ejs'); -%>