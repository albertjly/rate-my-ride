<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="/images/logo-white.png" alt="">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link <%- currentMenu === 'homepage' ? 'active' : '' %>" aria-current="page" href="/">Home</a>
          </li>
          <% if(loggedIn) {%>
            <li class="nav-item">
              <a class="nav-link <%- currentMenu === 'dashboard' ? 'active' : '' %>" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%- currentMenu === 'post' ? 'active' : '' %>" href="/new-post">Post</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="logout" href="">Log out</a>
            </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link <%- currentMenu === 'login' || 'signup' ? 'active' : '' %>" href="/login">Login</a>
              </li>
              <% } %>
        </ul>
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-light" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
</header>